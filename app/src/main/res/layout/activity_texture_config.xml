<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="环绕方向S："
        app:layout_constraintBottom_toBottomOf="@+id/sg"
        app:layout_constraintEnd_toStartOf="@+id/sg"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sg" />

    <RadioGroup
        android:id="@+id/sg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/sRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="REPEAT" />

        <RadioButton
            android:id="@+id/sMirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIRROR" />

        <RadioButton
            android:id="@+id/sClamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLAMP" />

    </RadioGroup>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="环绕方向T："
        app:layout_constraintBottom_toBottomOf="@+id/tg"
        app:layout_constraintEnd_toStartOf="@+id/tg"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg" />

    <RadioGroup
        android:id="@+id/tg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t"
        app:layout_constraintTop_toBottomOf="@+id/sg">

        <RadioButton
            android:id="@+id/tRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="REPEAT" />

        <RadioButton
            android:id="@+id/tMirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIRROR" />

        <RadioButton
            android:id="@+id/tClamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLAMP" />

    </RadioGroup>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/minify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="minify过滤："
        app:layout_constraintBottom_toBottomOf="@+id/minG"
        app:layout_constraintEnd_toStartOf="@+id/minG"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minG" />

    <RadioGroup
        android:id="@+id/minG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/minify"
        app:layout_constraintTop_toBottomOf="@+id/tg">

        <RadioButton
            android:id="@+id/minNearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="NEAREST" />

        <RadioButton
            android:id="@+id/minLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LINEAR" />

    </RadioGroup>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/magnify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="magnify过滤："
        app:layout_constraintBottom_toBottomOf="@+id/magG"
        app:layout_constraintEnd_toStartOf="@+id/magG"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magG" />

    <RadioGroup
        android:id="@+id/magG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/magnify"
        app:layout_constraintTop_toBottomOf="@+id/minG">

        <RadioButton
            android:id="@+id/magNearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEAREST" />

        <RadioButton
            android:id="@+id/magLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="LINEAR" />

    </RadioGroup>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="start"
        android:text="纹理渲染"
        android:textColor="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/magG" />

</android.support.constraint.ConstraintLayout>