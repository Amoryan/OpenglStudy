<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fxyan.opengl">

    <!--使用open gl es 2.0-->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".base.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".geometry.GeometryMenuActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.point.PointActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.line.LineActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.triangle.TriangleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.square.SquareActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.polygon.EdgeInputActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />

        <activity
            android:name=".geometry.polygon.PolygonActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.circle.CircleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.cone.ConeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.cylindrical.CylindricalActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.cube.CubeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.TextureMenuActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.feature.RepeatActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.feature.MirroredRepeatActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.feature.ClampToEdgeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.cube.CubeTextureActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.LightMenuActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.base.BaseLightInVertexShaderActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.base.BaseLightInFragmentShaderActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.texture.LightTextureActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ply.PlyActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".camera.CameraActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>