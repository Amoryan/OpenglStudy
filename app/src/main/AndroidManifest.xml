<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fxyan.opengl">

    <!--使用open gl es 2.0-->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".geometry.GeometryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".geometry.GeometrySelectActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.TextureMenuActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.feature.RepeatActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.feature.MirroredRepeatActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.feature.ClampToEdgeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.TextureConfigActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".texture.TextureActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.LightMenuActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.base.BaseLightActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".light.texture.LightTextureActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ply.PlyActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>